 <div class="right-row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
     <!--  <div class="container-form"> -->
    <%= simple_form_for @recipe do |f| %>
 <!--   <form action=""> -->
    <h2 class="text-center">Add a recipe</h2>
    <br />
    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
         <%= f.input :name, placeholder: "Recipe name", label: false %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.association :course, prompt: "Course", label: false %>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.association :restriction, prompt: "Restriction", label: false %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.input :price, placeholder: "Price", label: false %>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="form-group">
          <%= f.input :photo, placeholder: "Photo", label:false %>
        </div>
      </div>
    </div>

 <!--  </div> -->
  <% end %>
</div>
